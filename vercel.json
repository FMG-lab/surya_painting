{
  "buildCommand": "cd backend && npm install",
  "outputDirectory": "backend",
  "public": false,
  "functions": {
    "backend/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "@database_url",
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_SERVICE_ROLE_KEY": "@supabase_service_role_key",
    "NODE_ENV": "production"
  }
}
