{
  "version": 2,
  "buildCommand": "npm install",
  "outputDirectory": ".",
  "public": false,
  "routes": [
    {
      "src": "/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    }
  ],
  "env": {
    "DATABASE_URL": "@DATABASE_URL",
    "SUPABASE_URL": "@SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY": "@SUPABASE_SERVICE_ROLE_KEY",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 512,
      "maxDuration": 10
    }
  }
}
